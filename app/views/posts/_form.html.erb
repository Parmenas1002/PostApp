<%= form_with(model: @post, local:true, url: choose_new_or_edit) do |form| %>
  <div class ="post_content">
      <%= form.label :content %>
      <%= form.text_field :content %>
  </div>
  <br><br>
  <% if @post.errors.any? %>
    <div>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li> <span class="error"><%= msg %> </span> </li>
        <% end %>
      </ul>
    </div>
    <br><br>
  <% end %>
  <%= form.submit %>
<% end %>
